---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import { getCollection } from "astro:content";
import SideBarFooter from "../components/SideBarFooter.astro";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-3 mt-5">
    <div class="text-xl py-1">Hey there 👋</div>
    <div class="text-5xl font-bold">I'm Luke Pieczynski</div>
    <div class="py-2 mt-4">
      <blockquote class="border-l-4 border-gray-400 pl-4 text-lg italic text-gray-700">
        I'm a senior at Penn State University, studying to get my Masters of Accounting, as well as
        my Bachelor's of Science in Accounting and in Management Informaion Systems.
      </blockquote>
    </div>
    <div class="mt-8 mb-6">
      <SideBarFooter />
    </div>

    <hr class="my-10">
  </div>

  <div class="mb-3">
    <div class="text-3xl mb-1 w-full font-bold">Education</div>
  </div>

<h1 class="psu-color text-2xl font-semibold mb-1">🎓 Penn State University</h1>
<div class="text-gray-600 text-sm list-none pl-1">University Park, PA</div>
  <ul class="list-disc ml-6 mt-2 space-y-2">
    <li class="pl-1">
      <div class="font-semibold">Master of Accounting</div>
      <div class="text-gray-600 text-sm list-none pl-1">Aug 2022 – Present</div>
    </li>
    <li class="pl-1">
      <div class="font-semibold">Accounting, B.S.</div>
      <div class="text-gray-600 text-sm list-none pl-1">Aug 2022 – Present</div>
    </li>
    <li class="pl-1">
      <div class="font-semibold">Management Information Systems, B.S.</div>
      <div class="text-gray-600 text-sm list-none pl-1">Aug 2022 – Present</div>
    </li>
  </ul>
</div>

<div class="pt-10 mb-5">
    <div class="text-3xl w-full font-bold">Experience</div>
</div>

<h1 class="thon-color text-2xl font-semibold mb-1">🎗️ Penn State THON™</h1>
  <ul class="list-disc ml-6 mt-2 space-y-2">
    <li class="pl-1">
      <div class="font-semibold">Communications Captain, Committee Logistics Coordinator</div>
      <div class="text-gray-600 font-semibold text-sm list-none pl-1">THON 2026</div>
      <br>
      <div class="text-gray-600 text-sm list-none pl-1">
        Coordinate sleep shift timeline and procedures for ~300 captains across 18 committees for THON Weekend. 
        Develop key timelines for captains and CWCs, working cross-committees to handle individual requests and issues. 
        Oversee committee sleep shift officers by creating training materials to help deliver success in their leadership roles. 
        Lead training events and create materials for captains and committee members for THON Weekend responsibilities.
      </div>
    </li>
    <li class="pl-1">
      <div class="font-semibold">Accounting, B.S.</div>
      <div class="text-gray-600 text-sm list-none pl-1">Aug 2022 – Present</div>
    </li>
    <li class="pl-1">
      <div class="font-semibold">Management Information Systems, B.S.</div>
      <div class="text-gray-600 text-sm list-none pl-1">Aug 2022 – Present</div>
    </li>
  </ul>
</div>
